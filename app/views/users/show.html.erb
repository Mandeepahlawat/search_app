<div class='col-12'>
  <div class='row'>
    <div class="col-6">
      <%= form_tag(user_path(@user), :method => "get", id: "search-form") do %>
        <div class="form-row">
          <div class="form-group col-6">
            <h3>Search</h3>
            <%= text_field_tag :search_topic, params[:search_topic], class: "form-control" %>
          </div>
        </div>
        <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
    <div class='col-6'>
      <h3>Search Results</h3>
      <% if !@search_results.blank? %>
        <ul>
          <% @search_results.each do |result| %>
            <li><%= result %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <hr/>
  
  <div class="row">
    <div class="col-6">
      <p>Name: <%= @user.name %></p>
      <p>Url: <%= @user.website.url %></p>
      <p>Short Url: <%= @user.website.short_url %></p>
      <p>Number of Friends: <%= @user.friends_count %></p>
    </div>
    <div class="col-6">
      <h3>Headings</h3>
      <ul>
        <% @user.headings.each do |heading| %>
          <li><%= heading.title %></li>
        <% end %>
      </ul>
    </div>
  </div>
  
  <hr/>
  
  <div class="row">
    <div class="col-6">
      <h3>Friends</h3>
      <ul>
        <% @user.friends.each do |friend| %>
          <li><%= link_to friend.name, user_path(friend) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-6">
      <h3>Add Friends</h3>
      <ul>
        <% @users.each do |user| %>
          <li><%= link_to user.name, add_friend_user_path(@user, friend_id: user.id), method: :post %></li>
        <% end %>
      </ul>
    </div>
  </div>
  
</div>